<h1>New order</h1>

<%= form_for(@order, html: { multipart: true }) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", required: "required" %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :creditcard_number %><br>
    <%= f.text_field :creditcard_number, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :creditcard_type %><br>
    <%= f.text_field :creditcard_type, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :creditcard_holder %><br>
    <%= f.text_field :creditcard_holder, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :creditcard_valid_date %><br>
    <%= f.text_field :creditcard_valid_date, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :creditcard_ccc %><br>
    <%= f.text_field :creditcard_ccc, class: "form-control", required: "required"  %>
  </div>            
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
