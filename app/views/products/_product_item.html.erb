<div class="col-md-3 col-sm-6 hero-feature">
    <div class="thumbnail">
        <%= image_tag product.picture.url(:thumb) %>
        <div class="caption">
            <h3><%= product.title %></h3>
            <p><%= product.description %></p>
            <h3><%= number_to_currency(product.price) %></h3>
            <%= form_tag shopping_cart_path do %>
                <%= text_field_tag :quantity, "", placeholder: "quantity", style: "width: 65px", required: true %>
                <%= hidden_field_tag :product_id, product.id %>
                <br /><br />
                <%= submit_tag "add to cart", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>