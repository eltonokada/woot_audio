<%= form_for(@product, html: { multipart: true }) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sku %><br>
    <%= f.text_field :sku, class: "form-control", required: "required" %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :weight %><br>
    <%= f.text_field :weight, class: "form-control", required: "required"  %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= select("product", "category_id", Category.all.collect {|p| [ p.name, p.id ] }, {prompt: 'Select Category'}, class: "form-control")  %>
  </div>
  <div class="field">
    <%= f.label :featured %>
    <%= f.check_box :featured %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control", required: "required"  %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
